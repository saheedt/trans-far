<div id="notice"><%= notice %></div>

<h1 class="page-label">Uploads</h1>

<div class="uploads-list">
  <div class="upload-list-heading">
    <div>Title</div>
    <div>Description</div>
  </div>
  <ul>
    <% @uploads.each_with_index do |upload, index| %>
      <% if index % 2 == 0%>
        <li class="uploads-list-item striped">
          <div class="uploads-list-item-attr"><%= upload.title %></div>
          <div class="uploads-list-item-attr"><%= upload.description %></div>
          <div class="uploads-list-item-attr"><%= link_to 'Show', upload %></div>
          <div class="uploads-list-item-attr"><%= link_to 'Edit', edit_upload_path(upload) %></div>
          <div class="uploads-list-item-attr"><%= link_to 'Destroy', upload, method: :delete, data: { confrim: 'Are you sure?'}, class: 'del' %></div>
        </li>
      <% else %>
        <li class="uploads-list-item">
          <div class="uploads-list-item-attr"><%= upload.title %></div>
          <div class="uploads-list-item-attr"><%= upload.description %></div>
          <div class="uploads-list-item-attr"><%= link_to 'Show', upload %></div>
          <div class="uploads-list-item-attr"><%= link_to 'Edit', edit_upload_path(upload) %></div>
          <div class="uploads-list-item-attr"><%= link_to 'Destroy', upload, method: :delete, data: { confrim: 'Are you sure?'}, class: 'del' %></div>
        </li>
      <% end %>

    <% end %>
  </ul>
  <%= link_to material_icon.add, new_upload_path, class: 'btn-floating btn-large waves-effect waves-light material-icons add-btn' %>
</div>
